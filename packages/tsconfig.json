{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2017"],
        "moduleResolution": "node",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "inlineSourceMap": true,
        "allowJs": false,
        "inlineSources": true,
        "declaration": true,
        "experimentalDecorators": true,
        "pretty": true,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "allowUnreachableCode": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "@radic/generators": ["./generators/types"],
            "@radic/generators/*": ["./generators/types/*"],
            "generator-radical-gitignore": ["./generator-radical-gitignore/types"],
            "generator-radical-gitignore/*": ["./generator-radical-gitignore/types/*"]
        }
    }
}